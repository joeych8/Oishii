<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/oishii_red</item>
        <item name="android:fontFamily">@font/prestige_elite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/oishii_red</item>
        <item name="android:fontFamily">@font/prestige_elite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PriceTextStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/oishii_red</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AllergenTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/oishii_dark_blue</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardSubTitleStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/oishii_red</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddToCartStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@drawable/cart_text_color</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CartQuantityTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/oishii_white</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="CountDownTimerStyle">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>



</resources>